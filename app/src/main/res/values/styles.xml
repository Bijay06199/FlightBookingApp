<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="actionOverflowButtonStyle">@style/Widget.AppCompat.ActionButton.Overflow</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TicketTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">#000</item>
    </style>

    <style name="MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">#FFF</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="materialCardViewStyle">@style/cardView_layout</item>
    </style>

    <style name="cardView_layout" parent="Widget.MaterialComponents.CardView">
        <item name="android:bottomLeftRadius">0dp</item>
        <item name="android:bottomRightRadius">0dp</item>
        <item name="android:topRightRadius">30dp</item>
        <item name="android:topLeftRadius">30dp</item>
        <item name="android:elevation">10dp</item>

    </style>

</resources>
